<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/messages_text_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:autoLink="all"
        android:background="@drawable/message_out_bg"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/messages_max_width"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/messages_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/messages_text_txt"
        android:layout_toStartOf="@+id/messages_text_txt"
        android:fontFamily="sans-serif"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />
</RelativeLayout>