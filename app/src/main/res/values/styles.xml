<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/bg</item>
    </style>

    <style name="EditText.White" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/highlight</item>
    </style>

    <style name="AppTheme.Transluent" parent="AppTheme" />

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:height">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="ButtonGoogle" parent="Button.Base">
        <item name="colorButtonNormal">@color/btn_google</item>
    </style>

    <style name="ButtonFacebook" parent="Button.Base">
        <item name="colorButtonNormal">@color/btn_facebook</item>
    </style>

    <style name="MaterialDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>